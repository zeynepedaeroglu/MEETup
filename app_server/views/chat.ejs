<!doctype html>
<html>
<head>
    <title>MeetUp - Chat</title>

    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font: 13px Helvetica, Arial; }
        form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
        form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
        form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
        #messages1 { list-style-type: none; margin: 0; padding: 0; }
        #messages1 li { padding: 5px 10px; }
        #messages1 li:nth-child(odd) { background: #eee; }
    </style>
</head>
<body>

    <ul id="messages1"></ul>
    <form action="">
        <input id="m" autocomplete="off" /><button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script a={{@kuki}}>
        $(function () {
            var socket = io();
            $('form').submit(function(){
                socket.emit('chat message', $('#m').val());
                $('#m').val('');
                return false;
            });
            socket.on('chat message', function(msg){
                $('#messages1').append($('<li>').text("<%=kuki%>" + ": " + msg));
            });
        });
    </script>
<%console.log('chat sayfası açıldı')%>
</body>
</html>